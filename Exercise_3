      function showCard($m) {
        echo "
        <div class='card'>
          <img src='{$m['img']}' alt='{$m['name']}' class='member-img'>
          <h3><em>{$m['name']}</em></h3>
          <p class='role'>{$m['role']}</p>
          <p class='quote'>\"{$m['quote']}\"</p>
          <p>üìû {$m['phone']}</p>
          <p>üåê <a href='{$m['github']}' target='_blank'>GitHub</a></p>
          <p>‚úâÔ∏è <a href='{$m['gmail']}'>Gmail</a></p>
          <p>üìò <a href='{$m['facebook']}' target='_blank'>Facebook</a></p>
        </div>";
      }

   
      if (isset($_GET['member']) && $_GET['member'] != "") {
        $search = strtolower(trim($_GET['member']));
        if (array_key_exists($search, $members)) {
          showCard($members[$search]);
        } else {
          echo "<p style='text-align:center; color:red;'>No member found with that name.</p>";
        }
      } else {
     
        foreach ($members as $m) {
          showCard($m);
